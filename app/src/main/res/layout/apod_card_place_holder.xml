<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apodGalleryItem"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:layout_width="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/apodImagePlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        app:shapeAppearanceOverlay="@style/ApodShapeableImageView"
        tools:src="@drawable/nasa_logo" />

    <TextView
        android:id="@+id/apodImageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="?primaryTextColor"
        android:textSize="16sp"
        tools:text="Asteroid" />

    <TextView
        android:id="@+id/apodImageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?secondaryTextColor"
        android:textSize="12sp"
        tools:text="2002-12-12" />

</LinearLayout>